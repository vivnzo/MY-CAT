local function saveOriginalCanCollide(character)
    originalCanCollide = {}
    for _, part in ipairs(character:GetDescendants()) do
        if part:IsA("BasePart") then
            -- ØªØ®Ø²ÙŠÙ† Ø§Ù„Ù…Ø±Ø¬Ø¹ ÙˆØ§Ù„Ø­Ø§Ù„Ø© Ø§Ù„Ø£ØµÙ„ÙŠØ©
            originalCanCollide[part] = part.CanCollide
        end
    end
end

local function restoreOriginalCanCollide()
    for part, val in pairs(originalCanCollide) do
        if part and part.Parent then
            pcall(function() part.CanCollide = val end)
        end
    end
    originalCanCollide = {}
end

local function enableNoclip()
    local char = player.Character
    if not char then return end

    saveOriginalCanCollide(char)

    -- Hook Ø¥Ù„Ù‰ Stepped Ù„ÙŠØªÙ… Ø¥Ø¬Ø¨Ø§Ø± CanCollide = false ÙƒÙ„ ÙØ±ÙŠÙ…
    noclipConnection = RunService.Stepped:Connect(function()
        local c = player.Character
        if not c then return end
        for _, part in ipairs(c:GetDescendants()) do
            if part:IsA("BasePart") then
                pcall(function() part.CanCollide = false end)
            end
        end
    end)
end

local function disableNoclip()
    if noclipConnection then
        noclipConnection:Disconnect()
        noclipConnection = nil
    end
    restoreOriginalCanCollide()
end

noclipToggle.MouseButton1Click:Connect(function()
    noclipEnabled = not noclipEnabled
    if noclipEnabled then
        noclipToggle.Text = "Noclip: ON"
        noclipToggle.BackgroundColor3 = COLOR_ENABLED
        enableNoclip()
    else
        noclipToggle.Text = "Noclip: OFF"
        noclipToggle.BackgroundColor3 = COLOR_DISABLED
        disableNoclip()
    end
end)

-- â™»ï¸ Ø¥Ø¹Ø§Ø¯Ø© ØªØ·Ø¨ÙŠÙ‚ Ø¨Ø¹Ø¯ Ø§Ù„Ù…ÙˆØª / Ø¯Ø®ÙˆÙ„ Ø´Ø®ØµÙŠØ© Ø¬Ø¯ÙŠØ¯Ø© ÙˆØ§Ù„ØªØ£ÙƒØ¯ Ù…Ù† Ø¥Ø¹Ø¯Ø§Ø¯Ø§Øª Ø§Ù„Ø£Ù…Ø§Ù† Ùˆ/Ø£Ùˆ Ø§Ù„Ù†ÙˆÙƒÙ„ÙŠØ¨
player.CharacterAdded:Connect(function(char)
	task.wait(0.5) -- Ù…Ù‡Ù„Ø© Ù‚ØµÙŠØ±Ø© Ù„ØªÙ‡ÙŠØ¦Ø© Ø§Ù„Ø£Ø¬Ø²Ø§Ø¡
