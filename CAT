-- [[ ÙˆØ¸ÙŠÙØ© Ø§Ù„Ø£Ù„ÙˆØ§Ù† Ø§Ù„Ù…ØªØºÙŠØ±Ø© RGB ]]
local function GetRGB()
	local t = tick()
	local r = math.sin(t * 2.5) * 127 + 128
	local g = math.sin(t * 2.5 + 2) * 127 + 128
	local b = math.sin(t * 2.5 + 4) * 127 + 128
	return Color3.fromRGB(r, g, b)
end

