-- ============================================================================
-- [5] Ù†Ø¸Ø§Ù… Ø§Ù„Ù€ ESP (Drawing API)
-- ============================================================================

local function AddEspToPlayer(plr)
	local Box = Drawing.new("Square")
	Box.Visible = false
	Box.Thickness = 1.5
	Box.Filled = false
	
	local Name = Drawing.new("Text")
	Name.Visible = false
	Name.Center = true
	Name.Outline = true
	Name.Color = Color3.new(1, 1, 1)

	local Conn
	Conn = RunService.RenderStepped:Connect(function()
		if plr.Character and plr.Character:FindFirstChild("HumanoidRootPart") and plr ~= LocalPlayer then
			local hrp = plr.Character.HumanoidRootPart
			local pos, onScreen = Camera:WorldToViewportPoint(hrp.Position)
			
			if onScreen then
				local dist = (Camera.CFrame.Position - hrp.Position).Magnitude
				local sizeX, sizeY = (2000/dist) * _G_BOX_SCALE_VAL, (3500/dist) * _G_BOX_SCALE_VAL
				
				if isEspBoxesActive then
					Box.Size = Vector2.new(sizeX, sizeY)
					Box.Position = Vector2.new(pos.X - sizeX/2, pos.Y - sizeY/2)
					Box.Color = GetRGB()
					Box.Visible = true
				else Box.Visible = false end
				
				if isEspNamesActive then
					Name.Text = plr.Name
					Name.Size = _G_NAME_SIZE_VAL
					Name.Position = Vector2.new(pos.X, pos.Y - sizeY/2 - 25)
					Name.Visible = true
				else Name.Visible = false end
			else
				Box.Visible = false
				Name.Visible = false
			end
		else
			Box.Visible = false
			Name.Visible = false
			if not plr.Parent then
				Box:Remove()
				Name:Remove()
				Conn:Disconnect()
			end
		end
	end)
end

for _, v in pairs(Players:GetPlayers()) do AddEspToPlayer(v) end
Players.PlayerAdded:Connect(AddEspToPlayer)

