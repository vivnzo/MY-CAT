local function CreateSpeedControl()
	local SpeedFrame = Instance.new("Frame")
	SpeedFrame.Name = "SpeedControl"
	SpeedFrame.Parent = PagePlayer
	SpeedFrame.Size = UDim2.new(1, 0, 0, 65)
	SpeedFrame.BackgroundColor3 = Color3.fromRGB(20, 20, 20)
	Instance.new("UICorner", SpeedFrame)

	local Label = Instance.new("TextLabel")
	Label.Parent = SpeedFrame
	Label.Size = UDim2.new(0.4, 0, 1, 0)
	Label.Position = UDim2.new(0.05, 0, 0, 0)
	Label.BackgroundTransparency = 1
	Label.Text = "Walk Speed"
	Label.TextColor3 = Color3.fromRGB(255, 255, 255)
	Label.Font = Enum.Font.Gotham
	Label.TextSize = 14
	Label.TextXAlignment = Enum.TextXAlignment.Left

	local Box = Instance.new("TextBox")
	Box.Parent = SpeedFrame
	Box.Size = UDim2.new(0, 70, 0, 35)
	Box.Position = UDim2.new(0.45, 0, 0.5, -17)
	Box.BackgroundColor3 = Color3.fromRGB(40, 40, 40)
	Box.Text = "100"
	Box.TextColor3 = Color3.fromRGB(255, 255, 255)
	Box.Font = Enum.Font.GothamBold
	Instance.new("UICorner", Box)

	local Btn = Instance.new("TextButton")
	Btn.Parent = SpeedFrame
	Btn.Size = UDim2.new(0, 80, 0, 35)
	Btn.Position = UDim2.new(0.72, 0, 0.5, -17)
	Btn.BackgroundColor3 = Color3.fromRGB(200, 50, 50)
	Btn.Text = "OFF"
	Btn.TextColor3 = Color3.fromRGB(255, 255, 255)
	Btn.Font = Enum.Font.GothamBold
	Instance.new("UICorner", Btn)

	Btn.MouseButton1Click:Connect(function()
		isSpeedActive = not isSpeedActive
		Btn.Text = isSpeedActive and "ON" or "OFF"
		Btn.BackgroundColor3 = isSpeedActive and Color3.fromRGB(50, 200, 50) or Color3.fromRGB(200, 50, 50)
		_G_WALKSPEED_VAL = tonumber(Box.Text) or 100
	end)

	Box.FocusLost:Connect(function()
		_G_WALKSPEED_VAL = tonumber(Box.Text) or 100
	end)
end

