-- ğŸš¶ Ø¯Ø§Ù„Ø© Ø¢Ù…Ù†Ø© Ù„Ù„Ø­ØµÙˆÙ„ Ø¹Ù„Ù‰ Humanoid
local function getHumanoid()
	local char = player.Character or player.CharacterAdded:Wait()
	return char:WaitForChild("Humanoid")
end

-- ğŸ“Œ ØªØ­Ø¯ÙŠØ¯ Ø§Ù„Ù‚ÙŠÙ… Ø§Ù„Ø£ØµÙ„ÙŠØ© Ù„Ù„Ù…Ø§Ø¨
local function setInitialValues()
    local success, hum = pcall(getHumanoid)
    if success and hum then
        DEFAULT_WALK_SPEED = hum.WalkSpeed or DEFAULT_WALK_SPEED
        DEFAULT_JUMP_POWER = hum.JumpPower or DEFAULT_JUMP_POWER
    end
end

setInitialValues()

-- ğŸ”´ Flash Loading Screen (Ø¨Ø¯ÙˆÙ† ØªØºÙŠÙŠØ± ÙƒØ¨ÙŠØ±)
local function createLoadingScreen()
	local loadingGui = Instance.new("ScreenGui", playerGui)
	loadingGui.Name = "LoadingFlash"
	loadingGui.IgnoreGuiInset = true
	loadingGui.ResetOnSpawn = false

	local flash = Instance.new("Frame", loadingGui)
	flash.Size = UDim2.new(1, 0, 1, 0)
	flash.BackgroundColor3 = Color3.fromRGB(255, 0, 0)

	local label = Instance.new("TextLabel", flash)
	label.Size = UDim2.new(1, 0, 1, 0)
	label.Text = "LOADING..."
	label.TextColor3 = Color3.fromRGB(255, 255, 255)
	label.BackgroundTransparency = 1
	label.Font = Enum.Font.GothamBlack
	label.TextScaled = true

	for i = 1, 3 do
		flash.BackgroundTransparency = 1
		task.wait(0.1)
		flash.BackgroundTransparency = 0
		task.wait(0.1)
	end
    
    local fadeOutInfo = TweenInfo.new(0.5, Enum.EasingStyle.Quad, Enum.EasingDirection.Out)
    local flashTween = TweenService:Create(flash, fadeOutInfo, {BackgroundTransparency = 1})
    local labelTween = TweenService:Create(label, fadeOutInfo, {TextTransparency = 1})

    flashTween:Play()
    labelTween:Play()
    
    flashTween.Completed:Wait()

	loadingGui:Destroy()
end

createLoadingScreen()

