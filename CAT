-- ØªØ­Ø¯ÙŠØ« Ø§Ù„Ø¥Ø­ØµØ§Ø¦ÙŠØ§Øª
RunService.Heartbeat:Connect(function()
	local fps = math.floor(workspace:GetRealPhysicsFPS())
	local pingVal = StatsService.Network.ServerStatsItem["Data Ping"]:GetValueString()
	local pingClean = pingVal:match("%d+") or "0"
	FpsDisplay.Text = "âš¡ FPS: " .. fps
	PingDisplay.Text = "ğŸŒ PING: " .. pingClean .. "ms"
end)

-- ============================================================================
-- [2] Ù…Ù†Ø·Ù‚ Ø§Ù„Ø¹Ù…Ù„ÙŠØ§Øª (Speed, Jump, Noclip, InfJump)
-- ============================================================================

-- Ø§Ù„Ù‚ÙØ² Ø§Ù„Ù„Ø§Ù†Ù‡Ø§Ø¦ÙŠ
UserInputService.JumpRequest:Connect(function()
	if isInfJumpActive then
		local char = LocalPlayer.Character
		if char then
			local hum = char:FindFirstChild("Humanoid")
			if hum then
				hum:ChangeState(Enum.HumanoidStateType.Jumping)
			end
		end
	end
end)

-- Ø§Ù„Ù†Ùˆ ÙƒÙ„ÙŠØ¨ (Ø§Ù„Ù…Ø±ÙˆØ± Ø¹Ø¨Ø± Ø§Ù„Ø¬Ø¯Ø±Ø§Ù†)
RunService.Stepped:Connect(function()
	if isNoclipActive then
		if LocalPlayer.Character then
			for _, part in pairs(LocalPlayer.Character:GetDescendants()) do
				if part:IsA("BasePart") then
					part.CanCollide = false
				end
			end
		end
	end
end)

-- Ø§Ù„Ø³Ø±Ø¹Ø© ÙˆØ§Ù„Ù‚ÙØ² Ø§Ù„Ø¬Ø¨Ø±ÙŠ (Ø¶Ù…Ø§Ù† Ø¹Ø¯Ù… Ø§Ù„ØªØ¹Ø·Ù„)
RunService.RenderStepped:Connect(function()
	if LocalPlayer.Character and LocalPlayer.Character:FindFirstChild("Humanoid") then
		local hum = LocalPlayer.Character.Humanoid
		if isSpeedActive then
			hum.WalkSpeed = _G_WALKSPEED_VAL
		end
		if isJumpActive then
			hum.JumpPower = _G_JUMPPOWER_VAL
			hum.UseJumpPower = true
		end
	end
end)

