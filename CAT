    updateBoostValues()
    if jumpBoosted then applyJump() end
end)

-- âŒ¨ï¸ Ù…Ù†Ø·Ù‚ ÙØªØ­/Ø¥ØºÙ„Ø§Ù‚ Ø§Ù„ÙˆØ§Ø¬Ù‡Ø© Ø¨Ø²Ø± ALT
UserInputService.InputBegan:Connect(function(input, gameProcessedEvent)
    local isTyping = speedInput:IsFocused() or jumpInput:IsFocused()
    if gameProcessedEvent and not isTyping then return end
    
    if input.KeyCode == Enum.KeyCode.LeftAlt or input.KeyCode == Enum.KeyCode.RightAlt then
        guiHidden = not guiHidden
        gui.Enabled = not guiHidden
    end
end)

-- ğŸ›¡ï¸ ÙˆØ¸ÙŠÙØ© ØªØ£Ù…ÙŠÙ† Ø§Ù„Ù‚ÙŠÙ… (ØªØªØ¹Ø§Ù…Ù„ Ù…Ø¹ ÙƒÙ„ Ø®Ø§ØµÙŠØ© Ø¨Ù…ÙØ±Ø¯Ù‡Ø§)
local function setupBoostSecurity()
    local success, hum = pcall(getHumanoid)
    if not success or not hum then return end

    -- ØªØ£Ù…ÙŠÙ† WalkSpeed
    hum:GetPropertyChangedSignal("WalkSpeed"):Connect(function()
        if speedBoosted and hum.WalkSpeed ~= BOOST_WALK_SPEED then
            pcall(function() hum.WalkSpeed = BOOST_WALK_SPEED end)
        end
    end)
    
    -- ØªØ£Ù…ÙŠÙ† JumpPower
    hum:GetPropertyChangedSignal("JumpPower"):Connect(function()
        if jumpBoosted and hum.JumpPower ~= BOOST_JUMP_POWER then
            pcall(function() hum.JumpPower = BOOST_JUMP_POWER end)
        end
    end)
end

